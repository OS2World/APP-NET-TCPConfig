                HLP_AdressBook                 =10;

Implementation
              Begin
              AdressBookFileName:='NFSBOOK.DAT';
              PathRec.MountExe:='Mount.exe';
              PathRec.UMountEXE:='UMount.EXE';
              PathRec.NFS300IFS:='NFS300.IFS';
              PathRec.BootPath:=Paramstr(0);
              End.
